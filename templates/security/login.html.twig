{% extends 'baseForLogPages.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main id="login-page">
        <div class="container-primary">
            <form method="post" id="login-form">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
                <label for="username">E-mail
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
                           autocomplete="email" required autofocus>
                </label>
                <label for="password">Mot de passe
                    <input type="password" name="_password" id="password" class="form-control"
                           autocomplete="current-password"
                           required>
                </label>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
                #}

                <button class="btn btn-lg btn-primary btn-form" type="submit">
                    Continuer
                </button>
                <p>
                    Pas de compte ? <a href="{{ path('app_register') }}">S'inscrire</a>
                </p>
            </form>
        </div>
    </main>
{% endblock %}
